<%-include("header.ejs");%>
<body>
    <div class="box" id="heading">
         <h1><%=daykind%></h1>
    </div>

    <div class="box">
        <% for(var i=0;i<tasks.length;i++){%>
            <form action="/delete" class="item" method="post" >
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=tasks[i]._id%>" onChange="this.form.submit()">
                    <p><%=tasks[i].name%></li></p> 
                </div>
            <input type="hidden" name="listfrom" value="<%=daykind%>"></input>
            </form>
        <%  }%>
        <form action="/" method="post" class="item">
            <input type="text" name="task" placeholder="New item" autocomplete="off">
            <button type="submit" name="postfrom" value="<%= daykind %>"">+</button>
        </form>
    </div>

</body>
<%-include("footer.ejs");%>
